<script>
let initialScrollTop = document.documentElement.scrollTop;
let upperHeader = document.getElementById('upperHeader');

window.addEventListener("scroll", function() {
    let currentScrollTop = document.documentElement.scrollTop;

    if (upperHeader) {
        if (currentScrollTop > initialScrollTop){
            console.log("ESCONDO")
            upperHeader.style.transform = 'translateY(-100%)';
        } else {
            console.log("APAREZCO")
            upperHeader.style.transform = 'translateY(0)';
        }
    }
});
</script>